/* Media Queries para Responsividad */
@media (max-width: 1000px) {
    .content-container {
        flex-direction: column;
    }

    .products-section {
        border-right: none;
        border-bottom: 1px solid var(--color-divider);
    }
    
    .order-section {
        background-color: var(--color-secondary-dark); /* Unificar el fondo */
    }
}

@media (max-width: 768px) {
    h2 {
        font-size: 2em;
    }
    
    .hero-carousel {
        height: 40vh;
    }

    .carousel-content h2 {
        font-size: 2.5em;
    }

    .navbar-games {
        justify-content: space-around;
        flex-wrap: wrap;
        padding: 10px 0;
    }

    .navbar-games button {
        padding: 8px 12px;
        margin: 5px;
        font-size: 0.9em;
    }

    .game-cards-container {
        gap: 20px;
    }

    .product-card {
        width: calc(50% - 10px); /* 2 por fila en tablet */
    }
}

@media (max-width: 500px) {
    .product-card {
        width: 100%; /* 1 por fila en móvil */
    }

