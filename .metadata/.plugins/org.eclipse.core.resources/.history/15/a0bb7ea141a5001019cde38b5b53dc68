<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title th:text="${pageTitle != null ? pageTitle : 'Página Tejo'}">Página Tejo</title>
	<link rel="stylesheet" th:href="@{/css/nuevo.css}">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Thymeleaf para URLs estáticas -->
    <link th:href="@{/css/nuevo.css}" rel="stylesheet">
</head>
<body>
    <!-- Header con Thymeleaf -->
    <header th:insert="~{fragments/header :: header}" th:unless="${#request.requestURI.endsWith('/login')}">
        <!-- Fallback si no existe el fragment -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" th:href="@{/}" th:text="${appName != null ? appName : 'Mi App'}">Mi App</a>
            </div>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="container my-4">
        <!-- Mostrar mensajes de éxito/error -->
        <div th:if="${message}" class="alert alert-success alert-dismissible fade show" role="alert">
            <span th:text="${message}">Mensaje de éxito</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        
        <div th:if="${error}" class="alert alert-danger alert-dismissible fade show" role="alert">
            <span th:text="${error}">Mensaje de error</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>

        <!-- Sección dinámica -->
        <h1 th:text="#{welcome.message}">Bienvenido a la página Tejo</h1>
        
        <!-- Mostrar datos del usuario si está logueado -->
        <div th:if="${usuario != null}">
            <p>Bienvenido, <span th:text="${usuario.nombre}">Usuario</span></p>
        </div>

        <!-- Formulario de ejemplo -->
        <form th:action="@{/procesar}" method="post" th:object="${formData}">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre:</label>
                <input type="text" class="form-control" id="nombre" th:field="*{nombre}" placeholder="Ingresa tu nombre">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>

        <!-- Lista dinámica -->
        <div th:if="${not #lists.isEmpty(elementos)}">
            <h3>Lista de Elementos:</h3>
            <ul class="list-group">
                <li th:each="elemento : ${elementos}" 
                    th:text="${elemento.nombre}" 
                    class="list-group-item">
                    Elemento de ejemplo
                </li>
            </ul>
        </div>

        <!-- Condicional -->
        <div th:switch="${tipo}">
            <p th:case="'admin'">Eres administrador</p>
            <p th:case="'user'">Eres usuario regular</p>
            <p th:case="*">Tipo de usuario no definido</p>
        </div>
    </main>

    <!-- Footer -->
    <footer th:insert="~{fragments/footer :: footer}" th:unless="${#request.requestURI.endsWith('/login')}">
        <!-- Fallback si no existe el fragment -->
        <div class="bg-dark text-white text-center py-3 mt-5">
            <p>&copy; 2024 Mi App Tejo</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script th:src="@{/js/app.js}"></script>
    
    <!-- Scripts condicionales -->
    <script th:if="${debug}">
        console.log('Modo debug activado');
    </script>
</body>
