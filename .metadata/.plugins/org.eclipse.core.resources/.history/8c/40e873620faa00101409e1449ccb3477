<!-- En tu administrador.html, en la sección de pedidos: -->
<div class="card">
    <div class="card-header">
        <h3>Pedidos Recientes</h3>
        <span class="badge bg-primary" th:text="${totalPedidos}">0</span>
    </div>
    <div class="card-body">
        <div th:if="${pedidos.empty}" class="text-center py-4">
            <p class="text-muted">No hay pedidos recientes</p>
        </div>
        <div th:unless="${pedidos.empty}" class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Pedido #</th>
                        <th>Usuario</th>
                        <th>Descripción</th>
                        <th>Total</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr th:each="pedido : ${pedidos}">
                        <td th:text="${pedido.id}">#</td>
                        <td th:text="${pedido.usuario.nombre}">Usuario</td>
                        <td th:text="${pedido.descripcion}">Descripción</td>
                        <td>$<span th:text="${#numbers.formatDecimal(pedido.total, 1, 2)}">0.00</span></td>
                        <td th:text="${#temporals.format(pedido.fechaCreacion, 'dd/MM/yyyy HH:mm')}">Fecha</td>
                        <td>
                            <span th:class="${pedido.estado == 'PENDIENTE'} ? 'badge bg-warning' : 
                                            ${pedido.estado == 'COMPLETADO'} ? 'badge bg-success' : 
                                            'badge bg-secondary'"
                                  th:text="${pedido.estado}">Estado</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>