/* Ajustes responsivos */
@media (max-width: 768px) {
    .main-dashboard-container {
        flex-direction: column;
        height: auto;
    }

    .sidebar-menu {
        flex: none;
        width: 100%;
        padding: 0;
    }
    
    .logo-sidebar {
        padding: 15px;
        border-bottom: none;
    }
    
    .sidebar-menu nav ul {
        display: flex;
        overflow-x: auto; /* Permite deslizar el menú en horizontal */
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin: 0;
    }
    
    .sidebar-menu nav ul li {
        flex-shrink: 0; /* Evita que los elementos se encojan */
    }

    .sidebar-footer {
        display: none; /* Ocultar el footer en móvil para ahorrar espacio */
    }

    .dashboard-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .dashboard-header h1 {
        margin-bottom: 10px;
    }

    .dashboard-content {
        padding: 20px;
    }

    .table-item {
