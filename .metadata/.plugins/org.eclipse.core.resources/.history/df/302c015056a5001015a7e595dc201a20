package sena.jj.com.controller;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;

@Controller
public class Index1Controller {

	@GetMapping("/")
	public String index1() {
		return "index1";
	}

	@GetMapping("/login")
	public String login() {
		return "/login";
	}

	@PostMapping("/logout")
	public String logout() {
		// Spring Security manejará el logout automáticamente
		return "redirect:/login?logout";
	}

	// Controlador para procesar pedidos (ejemplo)
	@PostMapping("/realizar-pedido")
	public String realizarPedido(@RequestParam String productos, @RequestParam Double total, Model model) {
		// Lógica para procesar el pedido
		System.out.println("Pedido recibido: " + productos);
		System.out.println("Total: $" + total);

		model.addAttribute("mensaje", "Pedido realizado exitosamente");
		return "redirect:/?success";
	}
}