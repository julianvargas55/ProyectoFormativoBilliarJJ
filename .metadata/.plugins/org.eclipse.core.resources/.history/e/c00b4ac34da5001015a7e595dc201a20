package sena.jj.com.controller;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;

@Controller
public class Index1Controller {

    @GetMapping("/index1")
    public String index(Model model) {
        // Puedes agregar datos din치micos al modelo si es necesario
        model.addAttribute("pageTitle", "Club de Juegos y Billar - Billar JJ");
        return "index";
    }
    
    @GetMapping("/login")
    public String login() {
        return "login";
    }
    
    @PostMapping("/logout")
    public String logout() {
        // Spring Security manejar치 el logout autom치ticamente
        return "redirect:/login?logout";
    }
    
    // Controlador para procesar pedidos (ejemplo)
    @PostMapping("/realizar-pedido")
    public String realizarPedido(@RequestParam String productos, 
                               @RequestParam Double total,
                               Model model) {
        // L칩gica para procesar el pedido
        System.out.println("Pedido recibido: " + productos);
        System.out.println("Total: $" + total);
        
        model.addAttribute("mensaje", "Pedido realizado exitosamente");
        return "redirect:/?success";
    }
}