package sena.jj.com.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

import jakarta.servlet.http.HttpSession;

@Controller
@RequestMapping("/login")
public class LoginController {

    @GetMapping("")
    public String mostrarLogin() {
        return "login";
    }

    @PostMapping("/procesar")
    public String procesarLogin(@RequestParam String email, 
                               @RequestParam String password,
                               HttpSession session,
                               RedirectAttributes redirect) {
        // Tu lógica de login aquí
        if ("admin@test.com".equals(email) && "123".equals(password)) {
            session.setAttribute("usuario", email);
            return "redirect:/administrador";
        } else {
            redirect.addFlashAttribute("error", "Credenciales incorrectas");
            return "redirect:/login";
        }
    }

    // ELIMINA o CAMBIA este método que causa conflicto
    // @GetMapping("/administrador")
    // public String accesoAdministrador(HttpSession session, RedirectAttributes redirect) {
    //     if (session.getAttribute("usuario") == null) {
    //         redirect.addFlashAttribute("error", "Debe iniciar sesión");
    //         return "redirect:/login";
    //     }
    //     return "redirect:/administrador";
    // }
}