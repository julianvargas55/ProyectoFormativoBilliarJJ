package sena.jj.com.model;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;

@Entity
@Table(name = "administradores") // O el nombre de tu tabla
public class Admin {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;
    
    private String nombreDeAdmin; // Campo que usas para iniciar sesión
    private String password;      // La contraseña (debe estar encriptada en una app real)
    private String rol = "ADMIN"; // Para diferenciarlo de otros usuarios

    // --- Constructor, Getters y Setters ---
    // (Asegúrate de incluirlos para que Spring y JPA puedan usarlos)
    
    // ...
}