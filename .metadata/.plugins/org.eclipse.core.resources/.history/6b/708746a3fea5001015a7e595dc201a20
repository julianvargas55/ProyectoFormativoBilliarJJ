    transition: background-color 0.3s, color 0.3s;
}

.login-button:hover {
    background-color: white;
    color: #202c33;
}

/* --- Contenido Principal (Paneles Izquierdo y Derecho) --- */
.content-wrapper {
    flex-grow: 1; /* Para que ocupe el espacio restante */
    display: flex;
}

.left-panel {
    flex: 0 0 350px; /* Ancho fijo para el panel izquierdo */
    background-color: #2a3e47; /* Color de fondo del panel izquierdo */
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center; /* Centrar el formulario verticalmente */
    border-top-left-radius: 15px; /* Ajuste para bordes si no hay top-bar */
    border-bottom-left-radius: 15px;
}

.register-form {
    width: 100%;
    max-width: 300px; /* Un poco de control sobre el ancho del form */
    margin: auto; /* Centrar el formulario dentro del panel */
}

