}

.input-group input {
    width: 100%;
    padding: 12px 12px 12px 45px; /* Espacio para el icono */
    border: none;
    border-radius: 5px;
    background-color: #344c57; /* Fondo del input */
    color: white;
    font-size: 1em;
    box-sizing: border-box;
    outline: none; /* Eliminar el contorno al enfocar */
}

.input-group input::placeholder {
    color: #a0a0a0; /* Color del placeholder */
}

/* Estilo del botón de envío (azul brillante) */
