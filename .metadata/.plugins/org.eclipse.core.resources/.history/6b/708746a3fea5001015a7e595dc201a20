/* --- Responsive Design (para pantallas más pequeñas) --- */
@media (max-width: 768px) {
    .main-container {
        width: 95%;
        height: auto; /* Altura auto para acomodar contenido */
        flex-direction: column; /* Paneles uno encima del otro */
        border-radius: 10px;
    }

    .top-bar {
        padding: 15px 20px;
        flex-direction: column; /* Logo y botón uno encima del otro */
    }

    .login-button {
        margin-top: 15px;
        width: 100%;
    }

    .content-wrapper {
        flex-direction: column;
    }

    .left-panel, .right-panel {
        flex: none; /* Eliminar flex-grow */
        width: 100%;
        padding: 30px 20px;
        border-radius: 0; /* Eliminar bordes redondeados específicos de paneles */
    }

    .left-panel {
        border-bottom-left-radius: 0;
        border-top-right-radius: 10px; /* Redondear arriba a la derecha */
    }

    .right-panel {
        border-top-right-radius: 0;
        border-bottom-left-radius: 10px; /* Redondear abajo a la izquierda */
        padding-top: 40px; /* Un poco más de espacio arriba */
    }

    .right-panel h1 {
        font-size: 3em;
    }

    .right-panel p {
        font-size: 1em;
    }
}