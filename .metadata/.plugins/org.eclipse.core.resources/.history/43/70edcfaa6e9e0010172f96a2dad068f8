package sena.jj.com.model; // Asegúrate de que este paquete sea correcto

import javax.persistence.*;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;

import java.time.LocalDateTime;

@Entity // Indica que esta clase es una tabla en la base de datos
@Table(name = "pedidos") // Nombre de la tabla en MySQL
public class Pedido {

    @Id // Clave primaria
    @GeneratedValue(strategy = GenerationType.IDENTITY) // Auto-incremento
    private Long id;

    // Aquí guardaremos la fecha en que se realizó el pedido
    private LocalDateTime fechaPedido;

    // Aquí guardaremos el total calculado del pedido
    private double total;

    // Métodos Getters y Setters (los necesitarás para acceder a los datos)
    // ... (Tu IDE puede generarlos automáticamente)
    
    // Ejemplo de un constructor básico
    public Pedido() {
        this.fechaPedido = LocalDateTime.now();
    }

    // [Agrega tus Getters y Setters aquí]
    // ...
}