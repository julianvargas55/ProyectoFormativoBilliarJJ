package sena.jj.com.controller;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;

import sena.jj.com.model.Usuario;  // ðŸ‘ˆ Importa tu clase Usuario

@Controller
public class RegistroController {

    @GetMapping("/registro")
    public String mostrarFormularioRegistro(Model model) {
        model.addAttribute("usuario", new Usuario());
        return "registro"; // va a templates/registro.html
    }

    @PostMapping("/registro")
    public String procesarFormularioRegistro(@ModelAttribute Usuario usuario) {
        // Guardar en BD (usando UsuarioRepository o tu servicio)
        System.out.println("Usuario registrado: " + usuario);
        return "redirect:/"; // despuÃ©s de registrarse lo mandamos al login (index.html)
    }
}
