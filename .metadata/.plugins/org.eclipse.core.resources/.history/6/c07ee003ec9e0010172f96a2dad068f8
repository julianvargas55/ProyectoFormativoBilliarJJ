package sena.jj.com.model; // Asegúrate de que este paquete sea correcto



import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Table;

@Entity
@Table(name = "detalle_pedido")
public class DetallePedido {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    // Clave foránea que enlaza con el Pedido (muchos detalles pertenecen a un pedido)
    @ManyToOne 
    @JoinColumn(name = "pedido_id")
    private Pedido pedido;

    private String nombreProducto;
    
    private double precioUnitario;
    
    // Si quieres guardar la cantidad (siempre 1 en tu caso actual)
    private int cantidad = 1;

	public void setPedido(Pedido pedidoGuardado) {
		// TODO Auto-generated method stub
		
	}

	public void setNombreProducto(String string) {
		// TODO Auto-generated method stub
		
	}

	public void setPrecioUnitario(double d) {
		// TODO Auto-generated method stub
		
	}

	public int getCantidad() {
		return cantidad;
	}

	public void setCantidad(int cantidad) {
		this.cantidad = cantidad;
	} 

    // Métodos Getters y Setters (Tu IDE puede generarlos)
    // ...
}