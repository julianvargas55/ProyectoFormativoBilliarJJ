package sena.jj.com.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;

import sena.jj.com.model.Usuario;
import sena.jj.com.repository.IUsuarioRepository;

@Controller
public class UsuarioController {

	@Autowired
	private IUsuarioRepository UsuarioRepository;

	// Página principal (index)
	@GetMapping("/")
	public String index() {
		return "index"; // templates/index.html
	}

	// Página de registro
	@GetMapping("/registro")
	public String mostrarRegistro(Model model) {
		model.addAttribute("usuario", new Usuario());
		return "registro"; // templates/registro.html
	}

	// Guardar usuario desde formulario de registro
	@PostMapping("/registro")
	public String registrarUsuario(Usuario usuario) {
		UsuarioRepository.save(usuario);
		return "redirect:/usuario"; // después de guardar, va a usuario.html
	}

	// Página de usuario
	@GetMapping("/usuario")
	public String usuario() {
		return "usuario"; // templates/usuario.html
	}

	

	// Página de recuperar contraseña
	@GetMapping("/olvcontraseña")
	public String olvContraseña() {
		return "olvcontraseña"; // templates/olvcontraseña.html
	}
}
